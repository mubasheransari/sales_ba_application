rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admin marker documents (created manually from Firestore Console)
    match /admins/{adminId} {
      // Needed so the app can safely check role after login.
      allow get: if signedIn() && request.auth.uid == adminId;
      allow list: if false;
      // Keep writes manual (console / server-side only)
      allow create, update, delete: if false;
    }

    // Users can read/write only their own data.
    // Admins can READ all users data (including attendance/sales).
    match /users/{userId} {
      allow read: if (signedIn() && request.auth.uid == userId) || isAdmin();
      allow write: if signedIn() && request.auth.uid == userId;

      match /{document=**} {
        allow read: if (signedIn() && request.auth.uid == userId) || isAdmin();
        allow write: if signedIn() && request.auth.uid == userId;
      }
    }

    // Deny everything else by default.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
